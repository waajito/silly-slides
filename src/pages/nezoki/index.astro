---
import SiteLayout from "../../layouts/SiteLayout.astro";
import CardWhite from "./card-white.astro";
---

<SiteLayout title="Nezuko">
  <section class="hero-section">
    <h1 class="header-right">危険区域</h1>
    <div class="sun"></div>
    <div class="sun sun-blur"></div>
    <img src="/images/nezuko.png" class="hero-image" />
    <div class="cards">
      <CardWhite
        title="to do"
        backgroundColor="#040615"
        color="white"
        value={150}
      />
      <CardWhite
        title="ongoing"
        backgroundColor="white"
        color="black"
        value={340}
      />
    </div>
  </section>
</SiteLayout>

<style lang="scss">
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Krona+One&display=swap");

  :root {
    --anim-ease: cubic-bezier(0.47, 0, 0.23, 1.38);
    --anim-time: 0.3s;
  }
  body {
    font-family: "Krona One", sans-serif;
    display: flex;
    min-height: 100vh;
    background-color: #f5f5f5;
  }

  .header-right {
    position: absolute;
    right: 0px;
    writing-mode: vertical-rl;
    text-orientation: upright;
    font-size: 90px;
    letter-spacing: 20px;
  }

  .hero-section {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    min-height: 100vh;
    flex-grow: 1;
  }

  .sun {
    background-color: #ff7759;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    position: absolute;
    top: -100px;
    transition: all var(--anim-time) var(--anim-ease);
  }

  .sun-blur {
    opacity: 40%;
  }

  .hero-image {
    width: 100%;
    max-width: 500px;
    position: absolute;
    bottom: 0px;
    transition: all var(--anim-time) var(--anim-ease);
  }

  .cards {
    display: flex;
    z-index: 1;
  }

  .hero-section:hover {
    .sun {
      scale: 2.2;
    }

    .sun-blur {
      scale: 2.5;
      filter: blur(20px);
    }
    .hero-image {
      max-width: 800px;
    }
  }
</style>
