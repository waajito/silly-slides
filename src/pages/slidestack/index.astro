---
import SiteLayout from "../../layouts/SiteLayout.astro";
---

<SiteLayout title="WhiteBoard">
  <div class="card-holder">
    <div class="card"><p>1</p></div>
    <div class="card"><p>2</p></div>
    <div class="card"><p>3</p></div>
    <div class="card"><p>4</p></div>
    <div class="card"><p>5</p></div>
  </div>
</SiteLayout>

<style lang="scss">
  .card-holder {
    display: flex;
    flex-direction: column;
  }

  .card {
    background-color: #f0f0f0;
    padding: 1rem;
    border-radius: 0.5rem;
    height: 100dvh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 200px;
    border: 1px solid #ccc;
    position: sticky;
    top: 0;
    
    p {
      color: #222222ff;
      mix-blend-mode: difference
    }
  }

  //   5 cards with different colored backgrounds
  .card:nth-child(1) {
    background-color: #eeffbb;
  }
  .card:nth-child(2) {
    background-color: #bbffc5;
  }
  .card:nth-child(3) {
    background-color: #bbcfff;
  }
  .card:nth-child(4) {
    background-color: #ffbbcb;
  }
  .card:nth-child(5) {
    background-color: #fdffbb;
  }
</style>
